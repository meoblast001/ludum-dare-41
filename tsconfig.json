{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015", "dom"],
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "strictNullChecks": true,
    "types": ["node"],
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": [
    "src/Game.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}
